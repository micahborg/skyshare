{
  "manifest_version": 3,
  "name": "skyShare 2.0",
  "version": "1.0",
  "description": "A browser extension built for peer-to-peer file sharing across any device.",
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["next_static/static/*", "icon.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
